<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.EBookCommerceApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/Tapa</item>
        <item name="colorPrimaryVariant">@color/LemonGrass</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/Mischka</item>
        <item name="colorSecondaryVariant">@color/Gallery</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.EBookCommerceApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.EBookCommerceApp.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.EBookCommerceApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>